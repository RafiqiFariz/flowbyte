<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GettingStartedActivity"
    android:background="@color/black">=
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:background="@drawable/test2"
        android:gravity="center" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:fontFamily="@font/gothic_b"
        android:text="Explore unlimited music with our app, accessing your favorite songs and playlists"
        android:textAlignment="center"
        android:textColor="#1EB1B7"
        android:layout_marginTop="30dp"
        android:textSize="25dp" />
    <Button
        android:id="@+id/buttonGettingStarted"
        android:layout_marginTop="30dp"
        android:layout_below="@id/textView"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/getting_started"
        android:textColor="@color/black"
        android:fontFamily="@font/gothic_b"
        android:layout_marginStart="55dp"
        android:backgroundTint="#1EB1B7"
        android:background="@drawable/bg"/>
</RelativeLayout>
