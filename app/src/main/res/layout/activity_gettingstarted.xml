<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gettingstarted"
    android:background="@color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAlignment="center"
        android:text="Explore unlimited music with our app, accessing your favorite songs and playlists"
        android:layout_marginTop="620dp"
        android:textColor="#1EB1B7"
        android:fontFamily="@font/gothic_b"/>

    <ImageView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="580dp"
        android:background="@drawable/test2"
        android:gravity="center" />
    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/getting_started"
        android:textColor="@color/black"
        android:fontFamily="@font/gothic_b"
        android:layout_marginStart="55dp"
        android:backgroundTint="#1EB1B7"
        android:background="@drawable/bg"
        android:layout_marginTop="770dp"/>



</RelativeLayout>